{% extends("base.html.twig") %}
{% block title %}Home{% endblock %}

{% block body %}
<div class="container">
{% for type, messages in app.session.flashBag.all() %}
    {% for message in messages %}
        <div class="alert alert-{{ type }} flash-message position-relative my-2">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
{% block main %}
{% endblock %}
</div>
{% endblock %}
{% block body_scripts %}
{{ parent() }}
<script src="{{ asset('js/app_alertsfade_out.js') }}"></script>
{% endblock %}

